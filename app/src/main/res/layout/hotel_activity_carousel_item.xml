<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/hotel_text_in_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingRight="@dimen/dm_70px"
        android:paddingTop="@dimen/dm_130px">

        <TextView
            android:id="@+id/hotel_index_activity"
            style="@style/new_hotel_activity_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="fjdasofjoa" />

        <TextView
            android:id="@+id/hotel_index_place"
            style="@style/new_hotel_activity_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dm_30dp"
            android:gravity="center"
            android:text="fjdasofjoa" />
    </LinearLayout>
</RelativeLayout>