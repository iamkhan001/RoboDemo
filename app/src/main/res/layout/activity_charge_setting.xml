<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/GlobalChildBackgroundImage"
    android:orientation="vertical">

    <include
        layout="@layout/layout_global_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="@dimen/dm_1520dp"
        android:layout_height="@dimen/dm_650dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm_150dp"
        android:background="@drawable/bg_set"
        android:gravity="center">

        <include
            layout="@layout/charge_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/button"
        android:layout_width="242dp"
        android:layout_height="70dp"
        android:layout_marginLeft="525dp"
        android:layout_marginTop="240dp"
        android:text="@string/charge_administration"
        android:textAllCaps="false"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/dm_20sp" />
</RelativeLayout>