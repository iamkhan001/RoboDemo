<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GlobalChildBackgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_global_title" />

    <include
        layout="@layout/layout_global_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="@dimen/dm_1006dp"
        android:layout_height="@dimen/dm_600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm_200dp"
        android:background="@drawable/bg_set"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dm_30dp"
            android:textSize="@dimen/dm_24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dm_30dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="@dimen/dm_800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/dm_18sp" />

        </ScrollView>
    </LinearLayout>


</RelativeLayout>
