<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.csjbot.blackgaga.robot_test.UpBodyTestActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/bt_deny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="摇头动作(Moving head)" />

            <Button
                android:id="@+id/bt_nod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点头动作(Nodding action)" />


            <Button
                android:id="@+id/bt_left_large_arm_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左大臂抬起(Left boom lift)" />

            <Button
                android:id="@+id/bt_left_large_arm_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左大臂放下(Left big arm down)" />

            <Button
                android:id="@+id/bt_left_small_arm_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左小臂抬起"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_left_small_arm_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左小臂放下"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_right_large_arm_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右大臂抬起(Right boom lift)" />

            <Button
                android:id="@+id/bt_right_large_arm_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右大臂放下(Lower right arm)" />

            <Button
                android:id="@+id/bt_right_small_arm_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右小臂抬起"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_right_small_arm_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右小臂放下"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_open_bug_window"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开启调试窗口(Open debug window)" />

            <Button
                android:id="@+id/bt_close_bug_window"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭调试窗口(Close the debug window)" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_set_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置别名"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_start_loop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始摆手(Start waving)" />

            <Button
                android:id="@+id/bt_stop_loop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止摆手(Stop waving)" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推送测试"
            android:visibility="gone" />


        <Button
            android:id="@+id/bt_micro_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="麦克风音量设置(Microphone volume setting)" />

        <Button
            android:id="@+id/bt_test_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试查询导航状态"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/bt_setSNNull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="将SN置空(Set SN to empty)" />

        <Button
            android:id="@+id/bt_ifly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="科大讯飞语音识别方案"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_test_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试内置打印机(Test the built-in printer)" />

        <Button
            android:id="@+id/bt_microsoft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微软语音识别方案"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_connect_bluetooth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选择蓝牙连接(Select Bluetooth connection)" />

            <Button
                android:id="@+id/bt_print_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打印取号(Print number)" />

            <Button
                android:id="@+id/bt_print_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打印商品(Printed goods)" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_config_hotword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改热词(Modify hot words)" />

        <Button
            android:id="@+id/btn_av_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音视频调试(Audio and video debugging)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_start_face_follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开启人脸跟随(Open face follower)" />

            <Button
                android:id="@+id/bt_stop_face_follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭人脸跟随(Close face follow)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭语音识别延时时间"
                />
            <EditText
                android:id="@+id/et_speech_time"
                android:layout_width="@dimen/dm_200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                />
            <Button
                android:id="@+id/bt_speech_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:layout_margin="@dimen/dm_20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表情测试:请输入表情编号"
                />
            <EditText
                android:id="@+id/et_expression"
                android:layout_width="@dimen/dm_200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
            <Button
                android:id="@+id/bt_expression_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换"
                android:layout_margin="@dimen/dm_20dp"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_connect_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接状态:"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_28sp" />
    </LinearLayout>
</ScrollView>