<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginRight="@dimen/dm_50dp"
    android:layout_marginTop="@dimen/dm_50dp"
    android:background="@drawable/coupon_green_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_20dp"
            android:layout_marginTop="@dimen/dm_25dp"
            android:text="ï¿¥"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_20sp" />

        <TextView
            android:id="@+id/tv_couponPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dm_15dp"
            android:layout_toRightOf="@id/tv1"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_couponPrice"
            android:layout_marginLeft="@dimen/dm_15dp"
            android:layout_toRightOf="@id/tv_couponPrice"
            android:text="@string/discount"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_30dp"
            android:layout_marginTop="@dimen/dm_30dp"
            android:text="@string/click_to_receive"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_100dp"
        android:layout_marginTop="@dimen/dm_40dp">

        <LinearLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dm_20dp"
                android:background="@drawable/icon_date_green" />

            <TextView
                android:id="@+id/tv_useHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_8dp"
                android:text="@string/coupon_use_condition"
                android:textColor="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container1"
            android:layout_marginTop="@dimen/dm_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dm_20dp"
                android:background="@drawable/time_limit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_8dp"
                android:text="@string/coupon_use_time"
                android:textColor="@color/darkgray" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>