<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm_250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dm_20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_language"
                    style="@style/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm_10dp"
                    android:background="@drawable/iv_language_ch" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_home_page"
                    style="@style/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dm_10dp"
                    android:background="@drawable/home_ico"
                    android:text="@string/home_page" />

                <TextView
                    android:id="@+id/tv_back"
                    style="@style/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm_10dp"
                    android:background="@drawable/back_ico"
                    android:text="@string/go_back" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dm_10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_ico"
                    android:text="@string/go_back" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/small_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dm_20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/customer_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dm_10dp">

                <ImageView
                    android:id="@+id/iv_customer_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/head_customerservice_btn" />

                <TextView
                    android:id="@+id/tv_customer_service"
                    style="@style/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:text="@string/customer_service" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dm_10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/head_setting_btn"

                    />

                <TextView
                    android:id="@+id/tv_settings"
                    style="@style/title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:text="@string/settings" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dm_10dp"
                    android:background="@drawable/head_shopcart_btn"
                    android:visibility="gone">

                    <TextView
                        style="@style/title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:text="@string/shopping_cart"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_shopping_count"
                    style="@style/home_cart_count_textview"
                    android:layout_width="@dimen/dm_35dp"
                    android:layout_height="@dimen/dm_35dp"
                    android:layout_alignLeft="@id/shopping_cart"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm_10dp"
                    android:layout_marginLeft="@dimen/dm_25dp"
                    android:background="@drawable/shop_cart_num"
                    android:gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>




        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>