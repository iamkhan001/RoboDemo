<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/GlobalChildBackgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <include layout="@layout/layout_global_title"/>

    <include
        layout="@layout/layout_global_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="@dimen/dm_1006dp"
        android:layout_height="@dimen/dm_600dp"
        android:layout_marginTop="@dimen/dm_160dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_set"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_28sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dm_30dp"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="@dimen/dm_600dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_24sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/read_content_bg"
            android:lineSpacingExtra="@dimen/dm_10dp"
            />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm_22sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dm_20dp"
            />

    </LinearLayout>




</RelativeLayout>
