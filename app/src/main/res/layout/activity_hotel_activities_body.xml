<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dm_15dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dm_20dp"
        android:background="@drawable/hotel_list_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotel_activity_button_top"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/dm_40dp"
            android:layout_marginTop="@dimen/dm_40dp"
            android:background="@drawable/hotel_activity_list_tag_push_button"
            android:stateListAnimator="@anim/button_press" />

        <ListView
            android:id="@+id/hotel_activity_left_list"
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:layout_marginRight="@dimen/dm_10dp"
            android:divider="#00000000"
            android:dividerHeight="@dimen/dm_20dp"
            android:paddingBottom="@dimen/dm_10dp"
            android:paddingTop="@dimen/dm_10dp"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/hotel_activity_button_bottom"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dm_40dp"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/dm_40dp"
            android:background="@drawable/hotel_activity_list_tag_button_down"
            android:stateListAnimator="@anim/button_press" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>