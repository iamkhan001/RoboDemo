<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/iv_learning_picture"
        android:layout_width="@dimen/dm_200dp"
        android:layout_height="@dimen/dm_250dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/iv_learning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_learning_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_20sp" />
</RelativeLayout>