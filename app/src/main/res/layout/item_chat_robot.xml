<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="21px"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/iv_robot_portrait" />

    <TextView
        android:id="@+id/tv_msg"
        style="@style/chat_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_robot_text_bg"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dm_3dp"
        android:paddingBottom="@dimen/dm_10dp"
        android:paddingStart="@dimen/dm_60dp"
        android:paddingEnd="@dimen/dm_10dp"
        android:paddingTop="@dimen/dm_10dp" />


</LinearLayout>