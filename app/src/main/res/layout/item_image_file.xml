<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dm_150dp"
        android:layout_height="@dimen/dm_120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_50dp"
        android:layout_toRightOf="@id/iv_image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件名：12345.jpg"
            android:textColor="@color/gray333333"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray333333"
            android:text="创建时间：2017年9月9日 9:10" />

    </LinearLayout>

</RelativeLayout>