<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/consultation_service_bg"
                android:orientation="vertical">

    <include layout="@layout/layout_global_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/title_view"
        android:layout_marginLeft="@dimen/dm_150dp"
        android:layout_marginRight="@dimen/dm_150dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="@dimen/dm_200dp"
            android:layout_height="match_parent"
            android:background="@color/consultation_service_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_passenger_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:background="@drawable/text_select_jichang"
                android:gravity="center"
                android:text="@string/passenger_service"
                android:textColor="@color/head_text_color"
                android:textSize="@dimen/dm_18sp"/>

            <TextView
                android:id="@+id/tv_opening_hours"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:background="#316dba"
                android:gravity="center"
                android:text="@string/opening_hours"
                android:textColor="@color/head_text_color"
                android:textSize="@dimen/dm_18sp"/>

            <TextView
                android:id="@+id/tv_service_notice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:background="#316dba"
                android:gravity="center"
                android:text="@string/service_notice"
                android:textColor="@color/head_text_color"
                android:textSize="@dimen/dm_18sp"/>

            <TextView

                android:id="@+id/tv_the_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:gravity="center"
                android:text="@string/the_card"
                android:textColor="@color/head_text_color"
                android:textSize="@dimen/dm_18sp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#467dc2"
            android:overScrollMode="never">

            <TextView
                android:id="@+id/tv_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dm_10dp"
                android:focusable="true"
                android:scrollbars="vertical"
                android:text="@string/vip_center_service"
                android:textColor="@color/ivory"/>
        </ScrollView>
    </LinearLayout>

    <include
        layout="@layout/layout_global_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>