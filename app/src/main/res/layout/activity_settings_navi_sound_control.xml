<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GlobalChildBackgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_global_title" />

    <LinearLayout
        android:layout_width="@dimen/dm_1520dp"
        android:layout_height="@dimen/dm_650dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm_150dp"
        android:background="@drawable/bg_set"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/navi_sound_control_manager"
            android:textColor="@color/black"
            android:textSize="@dimen/dm_28sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp"
                android:text="@string/navi_stop"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_22sp" />

            <EditText
                android:id="@+id/et_navi_pause_text1"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />

            <EditText
                android:id="@+id/et_navi_pause_text2"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />

            <EditText
                android:id="@+id/et_navi_pause_text3"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp"
                android:text="@string/navi_resume"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_22sp" />

            <EditText
                android:id="@+id/et_navi_resume_text1"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />

            <EditText
                android:id="@+id/et_navi_resume_text2"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />

            <EditText
                android:id="@+id/et_navi_resume_text3"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp"
                android:text="@string/navi_end"
                android:textColor="@color/black"
                android:textSize="@dimen/dm_22sp" />

            <EditText
                android:id="@+id/et_navi_end_text1"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />

            <EditText
                android:id="@+id/et_navi_end_text2"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />

            <EditText
                android:id="@+id/et_navi_end_text3"
                android:layout_width="@dimen/dm_150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dm_10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/deepskyblue"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/dm_22sp" />


    </LinearLayout>

</RelativeLayout>