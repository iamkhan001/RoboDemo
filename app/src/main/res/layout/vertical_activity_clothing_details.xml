<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/VerticalGlobalBackgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_global_title" />

    <LinearLayout
        android:layout_width="1010dp"
        android:layout_height="640dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dm_20dp"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cloth"
            android:layout_width="440dp"
            android:layout_height="560dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dm_20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cloth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#0c0c0c"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/original_price"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dm_5dp"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm_20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dm_20dp"
                    android:text="@string/present_price" />

                <TextView
                    android:id="@+id/tv_present_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dm_5dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dm_20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cloth_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />

            <TextView
                android:id="@+id/tv_cloth_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />

            <TextView
                android:id="@+id/tv_cloth_year_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />

            <TextView
                android:id="@+id/tv_cloth_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />

            <TextView
                android:id="@+id/tv_cloth_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />

            <TextView
                android:id="@+id/tv_cloth_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />

            <TextView
                android:id="@+id/tv_cloth_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#535353"
                android:textSize="@dimen/dm_21sp" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_global_chat"
        android:layout_width="match_parent"
        android:layout_height="563dp" />

</LinearLayout>