<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dm_20dp"
    android:layout_marginLeft="@dimen/dm_20dp"
    android:layout_marginRight="@dimen/dm_20dp"
    android:gravity="center"
    android:layout_gravity="center">

    <TextView
        style="@style/navi_menu_textview"
        android:id="@+id/tv_navi_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navi2_menu_item"
        android:paddingLeft="@dimen/dm_5dp"
        android:paddingRight="@dimen/dm_5dp"
        android:maxLines="2"
        android:gravity="center"
        android:textSize="16.5sp"/>
</LinearLayout>