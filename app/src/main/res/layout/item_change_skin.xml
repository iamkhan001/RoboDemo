<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSkinThumb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/no_product" />
    <skin.support.widget.SkinCompatCheckBox
        android:stateListAnimator="@anim/button_press"
        android:id="@+id/cbSkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivSkinThumb"
        android:layout_alignRight="@id/ivSkinThumb"
        android:button="@drawable/checkbox_selecter"
        android:checked="true"
        android:enabled="false"
        android:clickable="false"
        android:focusable="false"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSkinThumb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm_10dp"
        android:text="@string/app_name"
        android:textColor="@color/gray333333"
        android:textSize="@dimen/dm_30dp"/>

</RelativeLayout>
