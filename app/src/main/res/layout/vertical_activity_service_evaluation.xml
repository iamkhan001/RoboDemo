<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/VerticalGlobalChildBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:orientation="vertical">
        <include
            layout="@layout/layout_global_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_work_content_height"
            android:layout_margin="@dimen/vertical_content_maigin"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_margin="@dimen/dm_30dp"
                android:layout_width="@dimen/dm_380dp"
                android:layout_height="@dimen/dm_120dp"
                android:stateListAnimator="@anim/button_press">
                <Button
                    android:id="@+id/buttonPanel1"
                    android:textColor="@color/gray"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_154dp"
                    android:background="@drawable/satisfied_btn"
                    android:stateListAnimator="@anim/button_press" />
                <TextView
                    android:text="@string/satisfied"
                    android:textColor="@color/evaluation_button_color"
                    android:textSize="38dp"
                    android:layout_marginLeft="@dimen/dm_70dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="@dimen/dm_30dp"
                android:layout_width="@dimen/dm_380dp"
                android:layout_height="@dimen/dm_120dp"
                android:stateListAnimator="@anim/button_press">
                <Button
                    android:id="@+id/buttonPanel2"
                    android:textColor="@color/gray"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_154dp"
                    android:background="@drawable/very_satisfied_btn"
                    android:stateListAnimator="@anim/button_press" />
                <TextView
                    android:text="@string/very_satisfied"
                    android:textColor="@color/evaluation_button_color"
                    android:textSize="38dp"
                    android:layout_marginLeft="@dimen/dm_70dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_margin="@dimen/dm_30dp"
                android:layout_width="@dimen/dm_380dp"
                android:layout_height="@dimen/dm_120dp"
                android:stateListAnimator="@anim/button_press">
                <Button
                    android:id="@+id/buttonPanel3"
                    android:textColor="@color/gray"

                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_154dp"
                    android:background="@drawable/no_satisfied_btn"
                    android:stateListAnimator="@anim/button_press" />
                <TextView
                    android:text="@string/dissatisfied"
                    android:textColor="@color/evaluation_button_color"
                    android:textSize="38dp"
                    android:layout_marginLeft="@dimen/dm_70dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/chat_view"
        layout="@layout/layout_global_chat"
        android:layout_width="match_parent"
        android:layout_height="563dp" />
</LinearLayout>